{
  "compilerOptions": {
    "target": "es2016",                                  
    "experimentalDecorators": true,
    "module": "commonjs",                                
    "typeRoots": ["./types"],
    "outDir": "dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "strictPropertyInitialization": false,             
    "skipLibCheck": true,
  },
  "exclude": ["node_modules"]                      
}
